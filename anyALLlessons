CASE EXAMPLES

SELECT OrderID, Quantity,

CASE

WHEN Quantity > 30 THEN 'The quantity is greater than 30'
WHEN Quantity = 30 THEN 'The quantity is 30'
ELSE 'The quantity is under 30'
END AS QuantityText

FROM OrderDetails;



ALT SORGU
1.örnek:

SELECT * FROM book
WHERE page_number >

(--alt sorgu buraddan baþlýyor
SELECT page_number from book
where title='Gülün Adý'		-- alt sorgudan gülün adý sayfa sayýsý ne ise veri olarak üst sorguya çýkýyor.
);

2.örnek:

SELECT title,page_number, ((SELECT MAX(page_number) from book ), (SELECT MAX(page_number) from book ) - page_number) AS differ
from book
WHERE PAGE_NUMBER >

(
SELECT page_number from book
where title ='Gülün Adý'	--sorguyu en içteki query'den okumaya baþlýyor.
);


ANY //// ALL

1. örnek

SELECT first_name,last_name
FROM author
Where id =
(
SELECT id from book where title ='Abe lincoln ' -- id 3 döneceði için author tablosunda id'si 3 olan sorgudan döner
)

2. örnek

SELECT first_name,last_name
FROM author
Where id = ANY -- 4'e ve 5'e eþit olma durumu Herhangi bir koþul doðru ise deðeri döndürür.
(
SELECT id from book where title ='Abe lincoln ' or title='Saving moon'
)

3. örnek

SELECT first_name,last_name
FROM author
Where id = ALL -- Bütün deðerleri karþýlamadýðý için deðer döndürmez.
(
SELECT id from book where title ='Abe lincoln ' or title='Saving moon'
)

4. örnek


SELECT first_name,last_name
FROM author
Where id > ANY VEYA ALL KULLANABÝLÝRÝZ.
(
SELECT id from book where title ='Abe lincoln ' or title='Saving moon'
)
